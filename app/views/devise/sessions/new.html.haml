.wrapper.full-page-wrapper.page-login.text-center
  .inner-page
    .logo
      %a{:href => "index.html"}= image_tag('kingadmin-logo.png', alt:'')
    / button type="button" class="btn btn-login-facebook"><span>Login via Facebook</span></button
    / div class="separator"><span>OR</span></div
    .login-box.center-block
      = form_for(resource, as: resource_name, url: session_path(resource_name), class: 'form-horizontal') do |f|
        = devise_error_messages!
        %p.title Enter your e-mail
        .form-group
          = f.label :email, class: 'control-label sr-only'
          .col-sm-12
            .input-group
              = f.email_field :email, class: 'form-control', placeholder: 'email'
              %span.input-group-addon
                %i.fa.fa-user
        .form-group
          = f.label :password, class: 'control-label sr-only', placeholder: 'Password'
          .col-sm-12
            .input-group
              = f.password_field :password, placeholder: 'password', class: 'form-control'
              %span.input-group-addon
                %i.fa.fa-lock
        .simple-checkbox
          - if devise_mapping.rememberable?
            = f.check_box :remember_me
            = f.label :remember_me,"Remember me next time", class: 'checkbox'
        = content_tag(:button, type: :submit, class: 'btn btn-custom-primary btn-lg btn-block btn-login') do
          %i.fa.fa-arrow-circle-o-right
          Login
      / end form
      .links
        = render partial: "users/shared/links"
    / end login box div
  .push-sticky-footer
