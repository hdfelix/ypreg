- if @participating_localities.count > 0
  - @participating_localities.each do |loc|
    - if display_attendance_summary_for?(loc)
      %tr
        %td= link_to loc.city, event_locality_path(@event, loc)
        %td= @stats["#{loc.city}"]['grand_total']
        %td= @stats["#{loc.city}"]['total_yp']
        %td= @stats["#{loc.city}"]['total_serving_ones']
        %td= @stats["#{loc.city}"]['total_trainees']
        %td= @stats["#{loc.city}"]['total_helpers']
        %td= @stats["#{loc.city}"]['yp_so_ratio']
        %td= @stats["#{loc.city}"]['guests']
        %td= number_to_currency(@stats["#{loc.city}"]['amount_due'])
        %td= @stats["#{loc.city}"]['actual_grand_total']
        %td= @stats["#{loc.city}"]['actual_total_yp']
        %td= @stats["#{loc.city}"]['actual_total_serving_ones']
        %td= @stats["#{loc.city}"]['actual_total_trainees']
        %td= @stats["#{loc.city}"]['actual_total_helpers']
        %td= number_to_currency(@stats["#{loc.city}"]['actual_amount_paid'])
        %td= style_balance(@stats["#{loc.city}"]['balance'])
- else
  %tr
    %td.text-center{:colspan => "16"} There are no registrations for this event.
