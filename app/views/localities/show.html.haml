.content
  .row
    .main-header
      %h2
        = @locality.city
        , #{@locality.state_abbrv}
      %em
  .row
    .col-md-8
      = link_to "Back", localities_path, class: 'btn btn-default'
    .col-md-8
      %p#notice= notice
      .widget
        .widget-header
          %h3
            %i.fa.fa-calendar-o>
            Locality Contact
        .widget-content
          %table.table.table-bordered.table-striped.table-hover
            %thead
              %tr
                %th
                  %center Name
                %th
                  %center Email
                %th
                  %center Cellphone
                %th
            %tbody
              %tr
                - unless @locality.contact_id == nil
                  %td= User.find(@locality.contact_id).name
                  %td= mail_to User.find(@locality.contact_id).email
                  %td [cell]
                  %td
                    - if policy(@locality).update?
                      = link_to 'Edit', edit_locality_path(@locality)
                - else
                  %td
                    %center
                      \--
                      %center
                  %td
                    %center
                      \--
                      %center
                  %td
                    %center
                      \--
                      %center
                  %td
                    - if policy(@locality).update?
                      = link_to 'Add', edit_locality_path(@locality)
    .col-md-8
      .widget
        .widget-header
          %h3
            %i.fa.fa-calendar-o>
            Local Saints
        .widget-content
          %table.table.table-bordered.table-striped.table-hover
            %thead
              %tr
                %th
                  %center Name
                %th
                  %center Email
                %th
                  %center Cellphone
                %th
            %tbody
              - @locality.users.each do |user|
                %tr
                  %td= link_to user.name, user_path(user)
                  %td= user.email
                  %td= format_phone_number(user.cell_phone)
                  %td
                    - if policy(user).edit?
                      = link_to 'Edit', edit_user_registration_path(user)
                    - if policy(user).destroy?
                      = link_to 'Delete', admin_user_path(user), method: :delete, data: {confirm: 'Are you sure?'}
          = link_to new_admin_user_path, class: 'btn btn-primary' do
            = content_tag(:i, '', class: "fa fa-plus-square")
            New UserÂ 
          %p#notice= notice
        .widget-footer
    .col-md-8
      = link_to "Back", localities_path, class: 'btn btn-default'
