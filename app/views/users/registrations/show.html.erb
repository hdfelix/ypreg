<div class="content">
	<div class="row">
	<div class="main-header">
    <%# HDF: replaced 'current_user' with @user %>
		<h2><%= @user.name %></h2>
		<em></em>
	</div>
</div>
<div class="row">
	<!-- User info -->
	<div class="col-md-6 col-sm-6">
		<div class="widget">
			<div class="widget-header">
				<h3><i class="fa fa-calendar-o"></i>User Details</h3>
			</div>
			<div class="widget-content">
				<p id="notice"><%= notice %></p>

				<div class="row">
					<div class="col-sm-4">
						<strong>Name:</strong>
					</div>
					<div class="col-sm-8">
						<%= @user.name %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Role:</strong>
					</div>
					<div class="col-sm-8">
            <%= @user.role.titleize %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Gender:</strong>
					</div>
					<div class="col-sm-8">
						<%= @user.gender %>
					</div>
				</div>
				
				<div class="row">
					<div class="col-sm-4">
						<strong>Age:</strong>
					</div>
					<div class="col-sm-8">
						<%= @user.age %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Grade:</strong>
					</div>
					<div class="col-sm-8">
						<%= @user.grade %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Birthday:</strong>
					</div>
					<div class="col-sm-8">
						<%= format_date(@user.birthday) %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Locality:</strong>
					</div>
					<div class="col-sm-8">
						<%= @user.locality.city %>
					</div>
				</div>
					
				<div class="row">
					<div class="col-sm-4">
						<strong>Cell Phone:</strong>
					</div>
					<div class="col-sm-8">
						<%= format_phone_number(@user.cell_phone) %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
            <strong>Home phone:</strong>
					</div>
					<div class="col-sm-8">
						<%= format_phone_number(@user.home_phone) %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Work Phone:</strong>
					</div>
					<div class="col-sm-8">
						<%= format_phone_number(@user.work_phone) %>
					</div>
				</div>
			</div>

			<div class="widget-footer">	
			</div>
		</div>
	</div><!-- end User details -->

</div>
<div class="row">
	<div class="col-md-12">
		<%= link_to 'Edit', edit_user_registration_path(@user), class: 'btn btn-primary'%>
		<%= link_to 'Back', users_path, class: 'btn btn-default' %>
	</div>
</div>
</div><!-- End User info -->
