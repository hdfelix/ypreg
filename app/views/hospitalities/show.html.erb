<div class="content">
	<div class="row">
	<div class="main-header">
		<h2><%= @hospitality.name %></h2>
		<em><%= "a [H.Type] in #{ Locality.find(@hospitality.locality_id).city }" %></em>
	</div>
</div>
<div class="row">
	<!-- Hospitality info -->
	<div class="col-md-6">
		<div class="widget">
			<div class="widget-header">
				<h3><i class="fa fa-calendar-o"></i>Hospitality Details</h3>
			</div>
			<div class="widget-content">
				<p id="notice"><%= notice %></p>

				<div class="row">
					<div class="col-sm-4">
						<strong>Name:</strong>
					</div>
					<div class="col-sm-8">
						<%= @hospitality.name %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Type:</strong>
					</div>
					<div class="col-sm-8">
						[Type]
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Description:</strong>
					</div>
					<div class="col-sm-8">
						<%= @hospitality.display_description %>
					</div>
				</div>
				
				<div class="row">
					<div class="col-sm-4">
						<strong>Max Cap.:</strong>
					</div>
					<div class="col-sm-8">
						<%= @hospitality.max_capacity %>
					</div>
				</div>
					
				<div class="row">
					<div class="col-sm-4">
						<strong>Description:</strong>
					</div>
					<div class="col-sm-8">
						<%= @hospitality.display_description %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Contact:</strong>
					</div>
					<div class="col-sm-8">
						<%= User.find(@hospitality.contact_person_id).name %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Address:</strong>
					</div>
					<div class="col-sm-8">
						<%= @hospitality.display_address %>
					</div>
				</div>

				<!--div class="row"-->
					<!--div class="col-sm-12"-->
