			<div class="widget-footer">	
			</div>
		</div>
	</div>
	<!-- Hospitality Details -->
	<div class="col-md-6">
		<div class="widget">
			<div class="widget-header">
				<h3><i class="fa fa-bar-chart-o"></i>Statistics</h3>
			</div>
			<div class="widget-content">
				...
			</div>
		</div>
	</div><!-- end event hospitalities details -->

</div>
<div class="row">
	<div class="col-md-12">
		<%= link_to 'Edit', edit_hospitality_path(@hospitality), class: 'btn btn-primary'%>
		<%= link_to 'Back', hospitalities_path, class: 'btn btn-default' %>
	</div>
</div>
</div><!-- End hospitality info -->
