<div class="content">
	<div class="row">
	<div class="main-header">
		<h2><%= @lodging.name %></h2>
    <em><%= "a #{ Lodging::LODGING_TYPE[@lodging.lodging_type.to_i] } in #{ Locality.find(@lodging.locality_id).city }" %></em>
	</div>
</div>
<div class="row">
	<!-- Lodging info -->
	<div class="col-md-6">
		<div class="widget">
			<div class="widget-header">
				<h3><i class="fa fa-calendar-o"></i>Lodging Details</h3>
			</div>
			<div class="widget-content">
				<p id="notice"><%= notice %></p>

				<div class="row">
					<div class="col-sm-4">
						<strong>Name:</strong>
					</div>
					<div class="col-sm-8">
						<%= @lodging.name %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Type:</strong>
					</div>
					<div class="col-sm-8">
          <%= Lodging::LODGING_TYPE[@lodging.lodging_type.to_i] %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Description:</strong>
					</div>
					<div class="col-sm-8">
						<%= @lodging.display_description %>
					</div>
				</div>
				
				<div class="row">
					<div class="col-sm-4">
						<strong>Max Cap.:</strong>
					</div>
					<div class="col-sm-8">
						<%= @lodging.max_capacity %>
					</div>
				</div>
					
				<div class="row">
					<div class="col-sm-4">
						<strong>Description:</strong>
					</div>
					<div class="col-sm-8">
						<%= @lodging.display_description %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Contact:</strong>
					</div>
					<div class="col-sm-8">
						<%= User.find(@lodging.contact_person.id).name %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Address:</strong>
					</div>
					<div class="col-sm-8">
						<%= @lodging.display_address_in_address_block_format %>
					</div>
				</div>

				<!--div class="row"-->
					<!--div class="col-sm-12"-->
						<!--%= link_to 'Register', new_event_registrations_path, class: 'btn btn-default pull-right' %-->
					<!--/div-->
				<!--/div-->
			</div>

			<div class="widget-footer">	
			</div>
		</div>
	</div>
	<!-- Lodging Details -->
	<div class="col-md-6">
		<div class="widget">
			<div class="widget-header">
				<h3><i class="fa fa-bar-chart-o"></i>Statistics</h3>
			</div>
			<div class="widget-content">
				...
			</div>
		</div>
	</div><!-- end event lodgings details -->

</div>
<div class="row">
	<div class="col-md-12">
		<%= link_to 'Edit', edit_lodging_path(@lodging), class: 'btn btn-primary'%>
		<%= link_to 'Back', lodgings_path, class: 'btn btn-default' %>
    <%= link_to 'Delete', @lodging, method: :delete, data: { confirm: 'Are you sure?' } %>
	</div>
</div>
</div><!-- End lodging info -->
