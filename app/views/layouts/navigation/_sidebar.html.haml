%aside.main-sidebar
  %section.sidebar
    %ul.sidebar-menu.tree{'data-widget': 'tree'}
      -if user_signed_in?
        - if policy(Event).index?
          %li
            %a{href: events_url}
              %span Events
        - if policy(Locality).index?
          %li
            %a{href: localities_url}
              %span Localities
        - if policy(Location).index?
          %li
            %a{href: locations_url}
              %span Locations
        - if policy(Lodging).index?
          %li
            %a{href: lodgings_url}
              %span Lodgings
        - if policy(User).index?
          %li
            %a{href: users_url}
              %span Users
