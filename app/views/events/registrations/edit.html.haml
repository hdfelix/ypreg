.content
  .main-header
    %h2 Edit Registration
    %em
      Registration details for #{@registration.user.name}
  %br/
  .col-md-8
    / EDIT REGISTRATION FORM
    .widget
      .widget-header
        %h3
          %i.fa.fa-edit
      .widget-content
        / Registration form partial
        = render partial: 'form', locals: { event: @event, |
          registration: @registration,                     |
          return_to: @return_to }                          |
