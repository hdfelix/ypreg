.main-header
  %h2 Registrations
  %em list of people attending this event
.col-md-12
  .widget.widget-table
    .widget-header
      %h3
        %i.fa.fa-table
        = @event.title
    .widget-content
      .table-responsive
        %table#registrations.table.table-bordered.table-hover
          %thead
            %tr{:style => "font: bold"}
              %th Name
              / th>Email</th
              %th Role
              %th Gender
              %th Age
              %th Locality
              / th style="width: 150px">Phone</th
              %th Guest?
              %th Payment Adjustment
              %th Paid?
              %th Medical Release Form?
              %th Serving?
              %th Background Check
              %th Vehicle Seating Capacity
              %th
          %tbody
            - @registrations.each do |reg|
              = background_check_tr(reg.user, "reg-#{reg.id}")
              %td= link_to reg.user.name, event_registration_path(@event, reg)
              %td= reg.user.role.capitalize
              %td= reg.user.gender.to_s[0]
              %td= reg.user.age
              %td= reg.user.locality_city
              %td= reg.guest.to_s.capitalize
              %td= number_to_currency(reg.payment_adjustment)
              %td= display_yes_no(reg.paid)
              %td= display_yes_no(reg.medical_release)
              %td= display_yes_no(reg.serving_one)
              %td= format_date(reg.user.background_check_date)
              %td= reg.vehicle_seating_capacity
              %td= link_to 'Edit', edit_event_registration_path(@event,reg)
            - if @registrations.empty?
              %tr
                %td{:colspan => "12"}
                  %center There is no one registered for this event.
      = link_to 'Back', event_path(@event), class: 'btn btn-default'
