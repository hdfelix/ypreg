%h2 Registrations
%em list of people attending this event
.col-md-12
  .widget.widget-table
    .widget-header
      %h3
        %i.fa.fa-table
        = event.name
    .widget-content
      .table-responsive
        %table#registrations.table.table-bordered.table-hover
          %thead
            %tr
              %th Name
              %th Locality
              %th Lodging
              %th Role
              %th Gender
              %th Age
              %th Paid?
              %th MF?
          %tbody
            = render partial: 'registration', collection: registrations, locals: {event: @event}
      = link_to 'Back', event_path(@event), class: 'btn btn-default'
