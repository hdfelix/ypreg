%section.content-header
  %h1 Add Locality to Event
%section.content
  .row
    .col-xs-12
      .box
        .box-body
          %table.table.table-bordered.table-hover.table-striped
            %thead
              %tr
                %th Name
                %th State
            %tbody
              - event.other_localities.each do |locality|
                %tr
                  %td= locality.city
                  %td= locality.state
                  %td= link_to 'Add', new_event_locality_path(@event, locality), class: 'btn btn-default btn-sm'
.col-md-12
