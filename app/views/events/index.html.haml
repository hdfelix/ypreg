.content
  .main-header
    %h2 Events
    %em list of up-coming conferences, retreats, and one-day events
  .widget.widget-table
    .widget-header
      %h3
        %i.fa.fa-table
          Current Events
    .widget-content
      = render partial: 'table', locals: {events: events}
      - if policy(Event).new?
        = link_to new_event_path, class: 'btn btn-primary' do
          = content_tag(:i, '', class: "fa fa-plus-square")
          New Event
  .widget.widget-table
    .widget-header
      %h3
        %i.fa.fa-table
          Past Events
    .widget-content
      = render partial: 'table', locals: {events: past_events}
