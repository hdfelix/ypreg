<!-- Event Info Widget  -->
<div class="widget">
	<div class="widget-header">
		<h3><i class="fa fa-calendar"></i></h3>
	</div>
	<div class="widget-content">
		<div class="row">
			<div class="col-md-11"> 
				<h3><%= event.title %></h3>
			</div>
			<div class="col-md-1">
				<% if current_user %>
					<% unless current_user.registrations.where(event_id: event).empty? %>
						<%= link_to event_registration_path(event,current_user.registrations.where(event_id: event).first), class: 'btn btn-success pull-right' do %>
							<i class="fa fa-check-circle"></i>
							Registered
						<% end %>
					<% end %>
				<% end %>
			</div>
		</div>
		<br />
		<div class="row">
			<div></div>
			<div class="col-md-3" style="border-right: 1px solid #ccc; height: 100%">
				Location:
				<h4 ><%= event.location.name %></h4>
				<%= event_location(event) %>
			</div>
			<div class="col-md-3">
				Event Dates:
				<br />
				<strong><%= event_dates(event) %></strong>
				<br /><br />
				Registration window:
				<br />
				<strong><%= event_registration_dates(event) %></strong>
			</div>
			<div class="col-md-3">
				<h4><span>Cost:  </span><span><%= number_to_currency(event.registration_cost) %></span></h4>
				<br />
				<% if current_user %>
					<%= link_to 'Manage', event, class: 'btn btn-default' %>
					<% if current_user.registrations.where(event_id: event).empty? %>
						<%= link_to 'Register', new_event_registration_path(event), class: 'btn btn-custom-secondary' %>
					<% end %>
				<% else %>
					<p><%= link_to 'Sign in to register', user_session_path, class: 'btn btn-custom-secondary' %></p>
				<% end %>
			</div>
		</div>
	</div>
</div>
	<!-- End Event Info Widget  -->

