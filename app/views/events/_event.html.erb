
<!-- Event Info Widget  -->
<div class="widget">
	<div class="widget-header">
		<h3><i class="fa fa-calendar"></i></h3>
		<div class="btn-group widget-header-toolbar">
			<link_to class="btn btn-success btn-sm">
				<i class="fa fa-check-circle"></i>
					Registered!
				</span>
		</div>
	</div>
	<div class="widget-content">
		<h3><%= event.title %></h3>
		<br />
		<div class="row">
			<div></div>
			<div class="col-md-3" style="border-right: 1px solid #ccc; height: 100%">
				Location:
				<h4 ><%= event.location.name %></h4>
				<%= event_location(event) %>
			</div>
			<div class="col-md-3">
				Event Dates:
				<br />
				<strong><%= event_dates(event) %></strong>
				<br /><br />
				Registration window:
				<br />
				<strong><%= event_registration_dates(event) %></strong>
			</div>
			<div class="col-md-3">
				<h4><span>Cost:  </span><span><%= number_to_currency(event.registration_cost) %></span></h4>
				<br />
				<% if current_user %>
					<% unless already_registered?(event.id) %>
						<%= link_to 'Register', new_event_registration_path(event), class: 'btn btn-custom-secondary' %>
					<% end %>
					<%= link_to 'Edit', event, class: 'btn btn-default' %>
				<% else %>
					<p><%= link_to 'Sign in to register', user_session_path, class: 'btn btn-custom-secondary' %></p>
				<% end %>
			</div>
		</div>
	</div>
</div>
	<!-- End Event Info Widget  -->

