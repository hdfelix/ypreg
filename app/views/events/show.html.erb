<div class="content">
	<div class="main-header">
		<h2><%= @event.title %></h2>
		<em><%= "to be held at #{ Location.find(@event.location_id).name }" %></em>
	</div>
	<br />

	<!-- Event Registration Details -->
	<div class="col-md-6">
		<div class="widget">
			<div class="widget-header">
				<h3><i class="fa fa-bar-chart-o"></i>Statistics</h3>
			</div>
			<div class="widget-content">
				<table class="table table-bordered">
					<thead>
						<tr>
							<th></th>
							<th>Totals</th>
					</thead>
					<tbody>
						<tr>
							<td>Total Attendance</td>
							<td>[total]</td>
						</tr>
						<tr>
							<td>Camp Max Capacity</td>
							<td>[max cap]</td>
						</tr>
						<tr>
							<td>Remaining Spaces</td>
							<td>[spaces]</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</div><!-- end event registration details -->

	<!-- Event info -->
	<div class="col-md-6">
		<div class="widget">
			<div class="widget-header">
				<h3><i class="fa fa-calendar-o"></i>Event Details</h3>
			</div>
			<div class="widget-content">
				<p id="notice"><%= notice %></p>

				<div class="row">
					<div class="col-sm-4">
						<strong>Type of event:</strong>
					</div>
					<div class="col-sm-8">
						[Event Type]
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Begin Date</strong>
					</div>
					<div class="col-sm-8">
						<%= format_date(@event.begin_date) %>
					</div>
				</div>
				
				<div class="row">
					<div class="col-sm-4">
						<strong>End date: </strong>
					</div>
					<div class="col-sm-8">
						<%= format_date(@event.end_date) %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Registration opens: </strong>
					</div>
					<div class="col-sm-8">
						<%= format_date(@event.registration_open_date) %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Registration  closes: </strong>
					</div>
					<div class="col-sm-8">
						<%= format_date(@event.registration_close_date) %>
					</div>
				</div>

				<div class="row">
					<div class="col-sm-4">
						<strong>Registration cost:</strong>
					</div>
					<div class="col-sm-8">
						<%= (@registration_cost)? "#{number_to_currency(@registration_cost)}" : "TBA" %>
					</div>
				</div>

				<!--div class="row"-->
					<!--div class="col-sm-12"-->
						<!--%= link_to 'Register', new_registration_path, class: 'btn btn-default pull-right' %-->
					<!--/div-->
				<!--/div-->
			</div>

			<div class="widget-footer">	
				<%= link_to 'Edit', edit_event_path(@event) %> |
				<%= link_to 'Back', events_path %>
			</div>
		</div>
	</div>
</div><!-- End event info -->
