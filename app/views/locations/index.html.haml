.content
  .main-header
    %h2 Locations
    %em list of locations for conferences, retreats, and one-day events
  .col-md-12
    .widget.widget-table
      .widget-header
        %h3
          %i.fa.fa-table
      .widget-content
        .table-responsive
          %table.table.table-bordered.table-striped.table-hover
            %thead
              %tr
                %th Name
                %th Type
                %th Description
                %th Address
                %th Capacity
                %th
            %tbody
              - locations.each do |location|
                - @location = location.object
                %tr
                  %td= link_to location.name, @location
                  %td= location.location_type
                  %td= location.description
                  %td= location.address
                  %td= location.max_capacity
                  %td
                    - if policy(@location).edit?
                      = link_to 'Edit', edit_location_path(@location)
                    - if policy(@location).destroy?
                      = link_to 'Delete', @location, method: :delete, data: { confirm: 'Are you sure?' }
              - if locations.empty?
                %tr
                  %td{:colspan => "7"}
                    %center No Locations in the system.
        = link_to new_location_path, class: 'btn btn-primary' do
          = content_tag(:i, '', class: "fa fa-plus-square")
          New Location
