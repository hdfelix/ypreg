%section.content-header
  %h1
    = location.name
    %a.btn.btn-primary{href: edit_location_path(@location)} Edit
    %a.btn.btn-danger{href: location_path(@location), data: {confirm: 'Are you sure?', method: :delete}, ref: 'nofollow'} Delete
%section.content
  .row
    .col-md-6
      .box
        .box-body
          %strong Type
          %p= location.location_type
          %strong Description
          %p= location.description
          %strong Address
          %p= location.street_address
          %p= location.city_state_zip
          %strong Capacity
          %p= location.max_capacity
      .box
        .box-header.with-border
          %h1.box-title Lodgings
        .box-body
          %table.table.table-bordered.table-hover.table-striped
            %thead
              %tr
                %th Name
                %th Type
                %th Capacity
            %tbody
              - lodgings.each do |lodging|
                - @lodging = lodging.object
                %tr
                  %td= link_to lodging.name, @lodging
                  %td= lodging.lodging_type
                  %td= lodging.max_capacity
