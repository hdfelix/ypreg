#!/user/bin/env ruby
APP_ROOT = File.expand_path('..', __dir__)
Dir.chdir(APP_ROOT) do
  begin
    exec "yarnkg #{ARGV.join(' ')}"
  rescue Errno::ENOENT
    $stderr.puts 'Yarn executable was not detected in the system.'
    $stderr.puts 'Download Yarn at https://yarnpkg.com/end/docs/install'
    exit 1
  end
end